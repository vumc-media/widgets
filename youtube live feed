  body{font-family:Arial,Helvetica,sans-serif;margin:0;background:#f7f7f9;color:#222}
  .wrap{max-width:1100px;margin:0 auto;padding:20px}
  h1{font-weight:600;margin:14px 0}
  .player{position:relative;padding-top:56.25%;height:0;overflow:hidden;border-radius:14px;box-shadow:0 8px 24px rgba(0,0,0,.08);background:#000;margin-bottom:24px}
  .player iframe{position:absolute;inset:0;width:100%;height:100%;border:0}
  .hidden{display:none}
