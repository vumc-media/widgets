<body>
<div class="wrap">
  <h1>Versailles UMC Live</h1>

  <div id="live" class="player"><iframe id="liveIframe"
    src="about:blank"
    title="VUMC Live"
    allow="autoplay; encrypted-media; picture-in-picture; fullscreen"
    allowfullscreen></iframe></div>

  <div id="latest" class="player hidden" aria-hidden="true"><iframe
    src="https://www.youtube.com/embed/videoseries?list=PLD_PrR9HqVpmpEggvHeWkKCHHsOQr16T3&modestbranding=1&rel=0"
    title="Latest Sermons - Versailles UMC"
    allow="encrypted-media; picture-in-picture; fullscreen"
    allowfullscreen></iframe></div>
</div>

<script>
  const LIVE_URL = "https://www.youtube.com/embed/live_stream?channel=UC_svgodM3blLqWEBQ5yNjmA&modestbranding=1&rel=0";
  const liveIframe = document.getElementById("liveIframe");
  const liveWrap = document.getElementById("live");
  const latestWrap = document.getElementById("latest");

  function showLatest(){ liveWrap.classList.add("hidden"); latestWrap.classList.remove("hidden"); latestWrap.setAttribute("aria-hidden","false"); }

  // Try to load live; if blocked/offline, fall back after a short timeout
  liveIframe.src = LIVE_URL;

  // If the live embed is offline, YouTube usually keeps it blank/unstarted.
  // After 4s, switch to Latest automatically.
  setTimeout(() => {
    try {
      // Peek at the contentDocument to detect a loaded player; cross-origin blocks this,
      // so we just fall backâ€”safer and works everywhere.
      showLatest();
    } catch(e) {
      showLatest();
    }
  }, 4000);
</script>
